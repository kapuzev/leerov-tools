function install_app {
    local app_name=$1
    local brew_formula=$2
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º, —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ –ª–∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –≤ ~/Applications
    if [ -d "$HOME/Applications/$app_name" ] || [ -d "$HOME/Applications/$app_name.app" ]; then
        echo "‚úÖ $app_name —É–∂–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω –≤ ~/Applications"
        return 0
    fi
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º –∏ –Ω–∞—Å—Ç—Ä–∞–∏–≤–∞–µ–º brew –µ—Å–ª–∏ –Ω—É–∂–Ω–æ
    if ! command -v brew &> /dev/null; then
        brewSetup
    fi
    
    # –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —á–µ—Ä–µ–∑ brew —Å —É–∫–∞–∑–∞–Ω–∏–µ–º –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏
    echo "üì¶ –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º $app_name –≤ ~/Applications..."
    brew install --cask "$brew_formula" --appdir="$HOME/Applications"
}

# –°–æ–∑–¥–∞–µ–º –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é Applications –µ—Å–ª–∏ –µ—ë –Ω–µ—Ç
mkdir -p "$HOME/Applications"