function install_app {
    local brew_formula=$1    # –ü–µ—Ä–≤—ã–π –ø–∞—Ä–∞–º–µ—Ç—Ä - –Ω–∞–∑–≤–∞–Ω–∏–µ —Ñ–æ—Ä–º—É–ª—ã
    
    # –û–ø—Ä–µ–¥–µ–ª—è–µ–º –∏–º—è –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏
    # (–æ–±—ã—á–Ω–æ —Å–æ–≤–ø–∞–¥–∞–µ—Ç —Å —Ñ–æ—Ä–º—É–ª–æ–π, –Ω–æ –º–æ–∂–µ—Ç –æ—Ç–ª–∏—á–∞—Ç—å—Å—è)
    local app_name=${2:-$brew_formula}
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º, —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ –ª–∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ
    if [ -d "$HOME/Applications/$app_name.app" ]; then
        echo "‚úÖ $app_name —É–∂–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω –≤ ~/Applications"
        return 0
    fi
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º –∏ –Ω–∞—Å—Ç—Ä–∞–∏–≤–∞–µ–º brew –µ—Å–ª–∏ –Ω—É–∂–Ω–æ
    if ! command -v brew &> /dev/null; then
        brewSetup
    fi
    
    # –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —á–µ—Ä–µ–∑ brew
    echo "üì¶ –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º $app_name –≤ ~/Applications..."
    brew install --cask "$brew_formula" --appdir="$HOME/Applications"
}

# –°–æ–∑–¥–∞–µ–º –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é Applications –µ—Å–ª–∏ –µ—ë –Ω–µ—Ç
mkdir -p "$HOME/Applications"